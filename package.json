{
  "name": "monzilla",
  "version": "1.1.2",
  "description": "The king of the file monitoring tools",
  "bin": {
    "monzilla": "dist/monzilla-cli.js"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "babel src -d dist -s --ignore *.test.js",
    "debug": "babel-node --inspect-brk src/monzilla-cli.js",
    "test": "jest",
    "test:debug": "babel-node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "node_modules/",
      "scratch/"
    ]
  },
  "keywords": [
    "file",
    "monitor"
  ],
  "author": "John Lyon-Smith",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "jest": "^21.2.1"
  },
  "dependencies": {
    "auto-bind2": "^1.0.3",
    "chalk": "^2.2.0",
    "glob": "^7.1.2",
    "minimist": "^1.2.0",
    "ps-tree": "^1.1.0"
  }
}
